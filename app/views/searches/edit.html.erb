<div class="header">
</div>
  <h3>edit search</h3>
<%= simple_form_for(@search) do |f| %>
  <div class="range-wrapper" data-controller="output">
  <%= f.input :price, as: :range, input_html: { min: 2000, max: 10000, value: 2000, data: {action: "input->output#change"}}, wrapper_html: { class: "range-input-wrapper" } %>
  <output data-output-target="output">2000</output>
  </div>
  <%= f.input :city, required: true,
              autofocus: true,
              label: false,
              placeholder: "city"%>
  <%= f.input :property_type %>
  <%= f.input :area_size %>
  <%= f.input :bedrooms %>
  <%= f.input :bathrooms %>
  <%= f.input :floor %>
  <%= f.input :balcony %>
  <%= f.input :garden %>
  <%= f.input :parking %>
  <%= f.input :lift %>
  <%= f.input :furnished %>
  <%= f.input :pets %>
  <%= f.button :submit, "update search", class:"button-primary d-flex justify-content-center" %>
<% end %>
  <%= link_to "delete", listings_path, class: "button-secondary d-flex justify-content-center" %>
