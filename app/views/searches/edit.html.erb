<h3>edit search</h3>
<%= simple_form_for(@search) do |f| %>
  <div class="wrapper" data-controller="output">
   <div class="slider">
      <div class="progress"></div>
  </div>
    <div class="range-input">
      <input type="range" name="search[price]" class="range-min" min="0" max="3000" value="<%= @search.price %>" step="100">
      <input type="range" name="search[price_max]"class="range-max" min="0" max="3000" value="<%= @search.price_max %>" step="100">
      <output style="left: 19%" data-output-target="outputMin"><%= @search.price %></output>       
      <output style="right: 30%" data-output-target="outputMax"><%= @search.price_max %></output>        
    </div>
  </div>

  <%= f.input :city, 
              required: true,
              autofocus: true,
              label: false,
              placeholder: "city"%>
  <%= f.input :area_size, label: false,
              placeholder: "area size (in sqm)", input_html: { class:"form-input" } %>
  <%= f.input :property_type, collection: ["apartment", "penthouse", "house", "other"], label: false, prompt: "property type", input_html: { class:"form-input" } %>
  <%= f.input :bedrooms, collection: ["1", "2", "3", "4", "5", "more than 5"], label: false, prompt: "number of bedrooms", input_html: { class:"form-input" } %>
  <%= f.input :bathrooms, collection: ["1", "2", "3", "4", "5", "more than 5"], label: false, prompt: "number of bathrooms", input_html: { class:"form-input" } %>
  <%= f.input :floor, collection: ["ground floor", "1st floor", "2nd floor", "3rd floor", "4th floor", ">4th floor"], label: false, prompt: "floor", input_html: { class:"form-input" } %>
  <%= f.input :balcony, collection: ["n/a", "1", "2", "3","more than 3"], label: false, prompt: "number of balconies", input_html: { class:"form-input" } %>
  <%= f.input :garden, label: "garden", input_html: { class:"form-input" } %>
  <%= f.input :parking, label: "parking", input_html: { class:"form-input" } %>
  <%= f.input :lift, label: "lift", input_html: { class:"form-input" } %>
  <%= f.input :furnished, label: "furnished", input_html: { class:"form-input" } %>
  <%= f.input :pets, label: "pets allowed", input_html: { class:"form-input" } %>
  <%= f.button :submit, "update search", class:"button-primary d-flex justify-content-center" %>
<% end %>
  
  x<%= link_to "delete", listings_path, class: "button-secondary d-flex justify-content-center" %>
