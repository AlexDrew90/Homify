<div data-controller="swipe">
  <div class="profiles">
    <% @listings.each do |listing| %>
      <div class="profile">
        <div class="swipe_card mb-5">
          <div class="swipe_card_image" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.8)), url(https://source.unsplash.com/random/?interior/<%= "#{rand(5..80)}" %>); display: flex; align-items: end">
            <%# listing.photos %>
            <div class="swipe_card_header ms-3">
              <h2><%= "#{listing.address.split(",")[1].split(" ")[1]}" %></h2>
            </div>
          </div>
          <div class="swipe_card_description mt-4 ms-3">
            <p><%= listing.area_size %> mÂ²</p>
            <p><%= listing.bedrooms %> bedrooms</p>
            <p><%= listing.bathrooms %> bathroom</p>
            <p><%= listing.furnished ? 'This place is furnished' : 'This place is not furnished' %></p>
            <p><%= listing.floor %>. floor</p>
            <p><%= listing.pets ? 'Your pets are welcomed here' : '' %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
