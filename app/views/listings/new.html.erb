<div class="d-flex flex-row" id="new-listing-form">
  <%# <div id="new-pics">
  </div> %>
  <div class="create-form mt-4">
    <h3>add a new listing</h3>
    <%= simple_form_for @listing do |f| %>
      <%= f.input :address, label: "address", input_html: { class:"form-input" } %>
      <%= f.input :price, label: "rent", input_html: { class:"form-input" } %>
      <%= f.input :property_type, label: "property type", input_html: { class:"form-input" } %>
      <%= f.input :area_size, label: "living space (in sqm)", input_html: { class:"form-input" } %>
      <%= f.input :bedrooms, label: "bedrooms", input_html: { class:"form-input" } %>
      <%= f.input :bathrooms, label: "bathrooms", input_html: { class:"form-input" } %>
      <%= f.input :floor, label: "floor", input_html: { class:"form-input" } %>
      <%= f.input :balcony, label: "balcony", input_html: { class:"form-input" } %>
      <%= f.input :garden, label: "garden", input_html: { class:"form-input" } %>
      <%= f.input :parking, label: "parking", input_html: { class:"form-input" } %>
      <%= f.input :lift, label: "lift", input_html: { class:"form-input" } %>
      <%= f.input :furnished, label: "furnished", input_html: { class:"form-input" } %>
      <%= f.input :pets, label: "pets allowed", input_html: { class:"form-input" } %>
      <%= f.input :description, label: "description", input_html: { class:"form-input", :rows => 5 } %>
      <%# <%= f.input :photo_url, as: :file, input_html: { multiple: true } %>
      <%= f.button :submit, "save listing", input_html: { class:"button-primary" }  %>
    <% end %>
  </div>
</div>

<% if flash[:alert] %>
      <div id="alert">
         <%= flash[:alert] %>
      </div>
<% end %>
